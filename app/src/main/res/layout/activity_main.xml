<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/crocodile_act"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:id="@+id/back_side_crd"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="75dp"
        android:backgroundTintMode="add"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/crocodile_card_back" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/front_side_card"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="75dp"
        android:alpha="0"
        android:backgroundTint="#558B2F"
        app:cardBackgroundColor="#00FFFFFF"
        app:cardCornerRadius="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/crocodile_card_front" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/word_holder_cly"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="35dp"
                app:layout_constraintBottom_toTopOf="@+id/space5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_weight="9">

                <TextView
                    android:id="@+id/first_word_txt"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:fontFamily="@font/jolly_lodger"
                    android:gravity="center_vertical"
                    android:text="Word"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="@+id/number_one_txt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_weight="10"
                    app:layout_constraintStart_toEndOf="@+id/number_one_txt"
                    app:layout_constraintTop_toTopOf="@+id/number_one_txt"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/second_word_txt"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:fontFamily="@font/jolly_lodger"
                    android:gravity="center_vertical"
                    android:text="Longer Word"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="@+id/number_two_txt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_weight="10"
                    app:layout_constraintStart_toEndOf="@+id/number_two_txt"
                    app:layout_constraintTop_toTopOf="@+id/number_two_txt"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/third_word_txt"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:fontFamily="@font/jolly_lodger"
                    android:gravity="center_vertical"
                    android:text="Much Longer Word"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="@+id/number_three_txt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_weight="10"
                    app:layout_constraintStart_toEndOf="@+id/number_three_txt"
                    app:layout_constraintTop_toTopOf="@+id/number_three_txt"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/forth_word_txt"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:fontFamily="@font/jolly_lodger"
                    android:gravity="center_vertical"
                    android:text="Much much much longer word"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="@+id/number_four_txt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_weight="10"
                    app:layout_constraintStart_toEndOf="@+id/number_four_txt"
                    app:layout_constraintTop_toTopOf="@+id/number_four_txt"
                    app:layout_constraintVertical_bias="0.681"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/fifth_word_txt"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:fontFamily="@font/jolly_lodger"
                    android:gravity="center_vertical"
                    android:text="Much much much much muc longer word"
                    android:textAlignment="viewStart"
                    android:textColor="@color/black"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="@+id/number_five_txt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_weight="10"
                    app:layout_constraintStart_toEndOf="@+id/number_five_txt"
                    app:layout_constraintTop_toTopOf="@+id/number_five_txt"
                    app:layout_constraintVertical_bias="1.0"
                    tools:ignore="RtlCompat" />

                <TextView
                    android:id="@+id/number_one_txt"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:fontFamily="@font/jolly_lodger"
                    android:text="1."
                    android:textColor="@color/black"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toTopOf="@+id/number_two_txt"
                    app:layout_constraintEnd_toStartOf="@+id/first_word_txt"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_weight="2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/number_two_txt"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:fontFamily="@font/jolly_lodger"
                    android:text="2."
                    android:textColor="@color/black"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toTopOf="@+id/number_three_txt"
                    app:layout_constraintEnd_toStartOf="@+id/second_word_txt"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_weight="2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/number_one_txt" />

                <TextView
                    android:id="@+id/number_three_txt"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:fontFamily="@font/jolly_lodger"
                    android:text="3."
                    android:textColor="@color/black"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toTopOf="@+id/number_four_txt"
                    app:layout_constraintEnd_toStartOf="@+id/third_word_txt"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_weight="2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/number_two_txt" />

                <TextView
                    android:id="@+id/number_four_txt"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:fontFamily="@font/jolly_lodger"
                    android:text="4."
                    android:textColor="@color/black"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toTopOf="@+id/number_five_txt"
                    app:layout_constraintEnd_toStartOf="@+id/forth_word_txt"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_weight="2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/number_three_txt" />

                <TextView
                    android:id="@+id/number_five_txt"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:fontFamily="@font/jolly_lodger"
                    android:text="5."
                    android:textColor="@color/black"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/fifth_word_txt"
                    app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintHorizontal_weight="2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/number_four_txt" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Space
                android:id="@+id/space5"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/word_holder_cly"
                app:layout_constraintVertical_weight="2" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:gravity="bottom"
        android:text="Tap to flip"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#CDCACA"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/back_side_crd"
        app:layout_constraintVertical_bias="0.75"
        tools:ignore="RtlCompat" />

</androidx.constraintlayout.widget.ConstraintLayout>